<UserControl x:Class="AddPrefixOperation.AddPrefixConfigUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddPrefixOperation"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center">Add Prefix Rule</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label >Prefix</Label>
                <TextBox Name="PrefixTextBox" Width="100" Height="25" Grid.Column="1"/>
            </Grid>

            <Button x:Name="OkButton" Width="80" Height="25" Margin="10" Content="OK" Click="OkButton_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
